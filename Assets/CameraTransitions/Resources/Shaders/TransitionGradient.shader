Shader "Hidden/Camera Transitions/Gradient"
{
  Properties
  {
    _MainTex("Base (RGB)", 2D) = "white" {}
    _SecondTex("Second (RGB)", 2D) = "white" {}

    _T("Amount", Range(0.0, 1.0)) = 1.0
  }

  CGINCLUDE
  #include "UnityCG.cginc"
  #include "CameraTransitionsCG.cginc"

  sampler2D _GradientTex;

  half4 frag(v2f_img i) : COLOR
  {
    half3 fromPixel = tex2D(_MainTex, i.uv).rgb;
    half3 toPixel = tex2D(_SecondTex, RenderTextureUV(i.uv)).rgb;

    half3 transition = tex2D(_GradientTex, i.uv).rgb;

    half3 pixel = fromPixel;
    if (transition.x >= _T)
      pixel = toPixel;

    return half4(pixel, 1.0);
  }
  ENDCG

  SubShader
  {
    ZTest Always
    Cull Off
    ZWrite Off
    Fog { Mode off }

    Pass
    {
      CGPROGRAM
      #pragma fragmentoption ARB_precision_hint_fastest
      #pragma target 3.0
      #pragma multi_compile ___ INVERT_RENDERTEXTURE
      #pragma vertex vert_img
      #pragma fragment frag
      ENDCG
    }
  }

  Fallback "Transition Fallback"
}